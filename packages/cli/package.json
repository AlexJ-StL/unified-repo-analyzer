    "ora": "^8.0.1",
    "undici": "^6.0.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30",
    "jest": "^30.0.4",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2"
  }
