{
  "name": "@unified-repo-analyzer/cli",
  "version": "0.1.0",
  "description": "Command-line interface for the Unified Repository Analyzer",
  "main": "dist/index.js",
  "bin": {
    "repo-analyzer": "./bin/repo-analyzer.js"
  },
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "build": "rimraf dist && bun build src/index.ts --outdir dist --target node --sourcemap",
    "start": "bun dist/index.js",
    "test": "bun test",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "clean": "rimraf dist"
  },
  "keywords": [
    "cli",
    "repository",
    "analysis"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^12.0.0",
    "conf": "^12.0.0",
    "inquirer": "^9.2.15",
    "ora": "^5.4.1",
    "undici": "^5.29.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.11.30",
    "cross-env": "^7.0.3",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2"
  }
}
