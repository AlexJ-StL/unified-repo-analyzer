{
	"name": "@unified-repo-analyzer/frontend",
	"version": "0.1.0",
	"description": "React frontend for the Unified Repository Analyzer",
	"type": "module",
	"scripts": {
		"dev": "bun run vite",
		"build": "bun run tsc && bun run vite build",
		"build:prod": "NODE_ENV=production bun run tsc && bun run vite build --mode production",
		"preview": "bun run vite preview",
		"test": "bun run vitest run",
		"test:prod": "bun run vitest run --coverage",
		"test:watch": "bun run vitest",
		"lint": "biome lint .",
		"format": "biome format --write .",
		"clean": "rimraf dist"
	},
	"dependencies": {
		"@headlessui/react": "^1.7.18",
		"@heroicons/react": "^2.1.1",
		"axios": "^1.6.7",
		"d3": "^7.8.5",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-markdown": "^9.1.0",
		"react-router-dom": "^6.22.3",
		"socket.io-client": "^4.7.5",
		"zustand": "^4.5.2"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^6.4.6",
		"@testing-library/react": "^14.2.1",
		"@testing-library/user-event": "^14.5.2",
		"@types/d3": "^7.4.3",
		"@types/node": "^20.19.9",
		"@types/react": "^18.2.66",
		"@types/react-dom": "^18.2.22",
		"@vitejs/plugin-react": "^4.2.1",
		"autoprefixer": "^10.4.18",
		"jsdom": "^24.0.0",
		"postcss": "^8.4.35",
		"rimraf": "^5.0.5",
		"tailwindcss": "^3.4.1",
		"typescript": "^5.3.3",
		"vite": "^7.0.5",
		"vitest": "^3.2.4"
	}
}
