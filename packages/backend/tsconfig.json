{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "types": [],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "paths": {
      "@unified-repo-analyzer/shared": ["../shared/dist/index.d.ts"],
      "@unified-repo-analyzer/shared/*": ["../shared/dist/*"]
    },
    "typeRoots": ["../shared/dist", "./node_modules/@types"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "temp-test-repos",
    "**/*.test.js",
    "**/*.spec.js",
    "**/__tests__/**",
    "**/*.test.ts",
    "../shared/src/**"
  ],
  "ts-node": {
    "compilerOptions": {
      "moduleResolution": "bundler"
    }
  }
}
