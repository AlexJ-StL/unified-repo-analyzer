{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "types": ["node", "vitest/globals", "bun-types"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "allowImportingTsExtensions": false,
    "paths": {
      "@unified-repo-analyzer/shared": ["../shared/dist/index.d.ts"],
      "@unified-repo-analyzer/shared/*": ["../shared/src/*"],
      "@unified-repo-analyzer/shared/src/*": ["../shared/src/*"]
    }
  },,
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "temp-test-repos",
    "**/*.test.js",
    "**/*.spec.js",
    "**/__tests__/**",
    "**/*.test.ts"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "nodenext",
      "moduleResolution": "nodenext"
    }
  }
}
