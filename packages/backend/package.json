{
  "name": "@unified-repo-analyzer/backend",
  "version": "1.0.0",
  "description": "Backend API server for the Unified Repository Analyzer",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "cross-env LOG_LEVEL=debug bun --watch src/index.ts || npm run dev:node",
    "dev:node": "ts-node src/index.ts",
    "build": "rimraf dist && bunx tsc --project tsconfig.json",
    "build:tsc": "bunx tsc --project tsconfig.prod.json",
    "build:prod": "cross-env NODE_ENV=production bun run build --minify || cross-env NODE_ENV=production npm run build:tsc",
    "start": "bun dist/index.js || node dist/index.js",
    "start:prod": "cross-env NODE_ENV=production bun dist/index.js || cross-env NODE_ENV=production node dist/index.js",
    "test": "vitest run || bun test || npm test --silent || echo \"No npm tests configured\"",
    "test:prod": "cross-env NODE_ENV=production vitest run --coverage || cross-env NODE_ENV=production npm test --silent",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "clean": "rimraf dist"
  },
  "keywords": [
    "repository",
    "analysis",
    "api",
    "express"
  ],
  "author": "Unified Repository Analyzer Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/unified-repo-analyzer.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/unified-repo-analyzer/issues"
  },
  "homepage": "https://github.com/your-org/unified-repo-analyzer#readme",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "@unified-repo-analyzer/shared": "workspace:*",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "lru-cache": "^10.2.0",
    "morgan": "^1.10.0",
    "socket.io": "^4.7.5",
    "undici": "^6.0.0",
    "vitest": "^1.6.0",
    "winston": "^3.12.0",
    "winston-daily-rotate-file": "^5.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.30",
    "@types/supertest": "^6.0.2",
    "rimraf": "^5.0.5",
    "superagent": "^10.2.2",
    "supertest": "^7.1.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
