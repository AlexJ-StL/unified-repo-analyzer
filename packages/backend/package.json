{
  "name": "@unified-repo-analyzer/backend",
  "version": "0.1.0",
  "description": "Backend API server for the Unified Repository Analyzer",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "dev": "ts-node --watch --transpile-only src/index.ts",
    "build": "rimraf dist && tsc",
    "build:prod": "NODE_ENV=production npm run build",
    "start": "node dist/index.js",
    "start:prod": "NODE_ENV=production node dist/index.js",
    "test": "jest",
    "test:prod": "NODE_ENV=production jest --coverage",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "clean": "rimraf dist"
  },
  "keywords": [
    "repository",
    "analysis",
    "api",
    "express"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "lru-cache": "^10.2.0",
    "morgan": "^1.10.0",
    "socket.io": "^4.7.5",
    "undici": "^6.0.0",
    "winston": "^3.12.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.11.30",
    "@types/supertest": "^6.0.2",
    "jest": "^30.0.4",
    "rimraf": "^5.0.5",
    "superagent": "^10.2.2",
    "supertest": "^7.1.3",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2"
  }
}
