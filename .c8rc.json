{
  "reporter": [
    "text",
    "json",
    "html",
    "lcov"
  ],
  "reports-dir": "coverage",
  "exclude": [
    "node_modules/**",
    "dist/**",
    "build/**",
    "coverage/**",
    "**/*.d.ts",
    "**/*.config.*",
    "**/*.test.*",
    "**/*.spec.*",
    "**/tests/**",
    "**/__tests__/**",
    "**/scripts/**",
    "**/docs/**"
  ],
  "include": [
    "packages/*/src/**/*.ts",
    "packages/*/src/**/*.tsx",
    "packages/*/src/**/*.js",
    "packages/*/src/**/*.jsx"
  ],
  "check-coverage": true,
  "branches": 70,
  "functions": 70,
  "lines": 70,
  "statements": 70
}