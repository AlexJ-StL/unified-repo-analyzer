{
  "name": "unified-repo-analyzer",
  "version": "1.0.0",
  "description": "A comprehensive tool for analyzing code repositories, generating executive summaries and technical breakdowns",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "bun run dev:backend & bun run dev:frontend",
    "dev:backend": "bun run dev --filter packages/backend",
    "dev:frontend": "bun run dev --filter packages/frontend",
    "dev:cli": "bun run dev --filter packages/cli",
    "build": "bun run build --filter '*'",
    "build:prod": "NODE_ENV=production bun run build --filter '*'",
    "test": "bun test",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "check": "biome check .",
    "clean": "bun run clean --filter '*'",
    "prepare": "bun run build",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "deploy:prod": "bun run build:prod && bun run docker:build && bun run docker:up"
  },
  "keywords": [
    "repository",
    "analysis",
    "code",
    "summary",
    "llm",
    "ai",
    "monorepo",
    "typescript",
    "nodejs",
    "cli",
    "web"
  ],
  "author": "Unified Repository Analyzer Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/unified-repo-analyzer.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/unified-repo-analyzer/issues"
  },
  "homepage": "https://github.com/your-org/unified-repo-analyzer#readme",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.6",
    "typescript": "^5.3.3"
  }
}
