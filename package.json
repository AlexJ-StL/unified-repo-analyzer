{
  "name": "unified-repo-analyzer",
  "version": "1.0.0",
  "description": "A comprehensive tool for analyzing code repositories, generating executive summaries and technical breakdowns",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "echo \"Please run backend and frontend separately in different terminals:\" && echo \"Terminal 1: bun run dev:backend\" && echo \"Terminal 2: bun run dev:frontend\"",
    "dev:backend": "bun run --cwd packages/backend dev || npm run dev --workspace @unified-repo-analyzer/backend",
    "dev:frontend": "bun run --cwd packages/frontend dev || npm run dev --workspace @unified-repo-analyzer/frontend",
    "dev:cli": "bun run --cwd packages/cli dev || npm run dev --workspace @unified-repo-analyzer/cli",
    "cli": "bun packages/cli/dist/bin/repo-analyzer.js",
    "build": "bun run scripts/enhanced-build.ts",
    "build:legacy": "bun run build:shared && bun run build:backend && bun run build:cli && bun run build:frontend",
    "build:backend": "bun run --cwd packages/backend build || npm run build --workspace @unified-repo-analyzer/backend",
    "build:frontend": "bun run --cwd packages/frontend build || npm run build --workspace @unified-repo-analyzer/frontend",
    "build:cli": "bun run --cwd packages/cli build || npm run build --workspace @unified-repo-analyzer/cli",
    "build:shared": "bun run --cwd packages/shared build || npm run build --workspace @unified-repo-analyzer/shared",
    "build:prod": "cross-env NODE_ENV=production bun run scripts/enhanced-build.ts",
    "build:doctor": "bun run scripts/build-doctor.ts",
    "build:doctor:fix": "bun run scripts/build-doctor.ts --fix",
    "build:health": "bun run scripts/build-health-monitor.ts",
    "recovery:clean-deps": "bun run scripts/recovery-tools.ts clean-deps",
    "recovery:fix-types": "bun run scripts/recovery-tools.ts fix-types",
    "recovery:check-env": "bun run scripts/recovery-tools.ts check-env",
    "recovery:fix-scripts": "bun run scripts/recovery-tools.ts fix-scripts",
    "recovery:fix-workspace": "bun run scripts/recovery-tools.ts fix-workspace",
    "recovery:nuclear": "bun run scripts/recovery-tools.ts nuclear",
    "cleanup:processes": "bun run scripts/cleanup-test-processes.ts cleanup",
    "cleanup:status": "bun run scripts/cleanup-test-processes.ts status",
    "cleanup:monitor": "bun run scripts/cleanup-test-processes.ts monitor",
    "cleanup:limits": "bun run scripts/cleanup-test-processes.ts limits",
    "recovery:full": "bun run scripts/recovery-tools.ts full",
    "monitor:start": "bun run scripts/build-monitor.ts start",
    "monitor:stop": "bun run scripts/build-monitor.ts stop",
    "monitor:status": "bun run scripts/build-monitor.ts status",
    "test": "vitest run || bun test || npm test",
    "test:coverage": "vitest run --coverage",
    "test:coverage:watch": "vitest --coverage",
    "test:coverage:analysis": "bun run scripts/coverage-analysis.ts",
    "test:coverage:monitor": "bun run scripts/coverage-monitor.ts",
    "test:coverage:monitor:watch": "bun run scripts/coverage-monitor.ts watch",
    "test:coverage:badges": "bun run scripts/coverage-badge.ts",
    "test:coverage:full": "bun run test:coverage && bun run test:coverage:analysis && bun run test:coverage:badges",
    "test:coverage:enhanced": "bun run scripts/coverage-enhanced.ts collect",
    "test:coverage:check": "bun run scripts/coverage-enhanced.ts check",
    "test:coverage:fix": "bun run scripts/coverage-fix.ts fix",
    "test:coverage:collect": "bun run scripts/coverage-collect.ts",
    "test:coverage:validate": "bun run scripts/coverage-completion-test.ts",
    "test:optimize": "bun run scripts/test-execution-optimizer.ts optimize",
    "test:optimize:quick": "bun run scripts/test-execution-optimizer.ts quick",
    "test:fast-feedback": "bun run scripts/fast-feedback.ts",
    "test:selective": "bun run scripts/selective-tests.ts",
    "test:ci": "vitest run --config vitest.ci.config.ts",
    "test:ci:coverage": "vitest run --config vitest.ci.config.ts --coverage",
    "test:ci:reporter": "vitest run --config vitest.ci.config.ts --reporter=verbose --reporter=junit --reporter=json",
    "test:ci:bun": "bun test --config vitest.ci.config.ts",
    "test:ci:node": "node --loader tsx --test-runner vitest run --config vitest.ci.config.ts",
    "test:ci:cross-runtime": "npm run test:ci:bun && npm run test:ci:node",
    "test:local": "vitest --config vitest.config.ts",
    "test:vitest": "vitest run --config vitest.config.ts",
    "test:vitest:watch": "vitest --config vitest.config.ts",
    "test:performance": "vitest run --config vitest.config.ts --reporter=basic --run --no-coverage",
    "test:bun": "bun test",
    "test:all": "bun run --cwd packages/backend test || npm run test --workspace @unified-repo-analyzer/backend && bun run --cwd packages/frontend test || npm run test --workspace @unified-repo-analyzer/frontend && bun run --cwd packages/cli test || npm run test --workspace @unified-repo-analyzer/cli && bun run --cwd packages/shared test || npm run test --workspace @unified-repo-analyzer/shared",
    "test:integration": "vitest run tests/integration/ --config tests/integration/vitest.config.ts",
    "test:integration:watch": "vitest tests/integration/ --config tests/integration/vitest.config.ts",
    "test:integration:coverage": "vitest run tests/integration/ --config tests/integration/vitest.config.ts --coverage",
    "test:integration:ci": "vitest run tests/integration/ --config tests/integration/vitest.config.ts --reporter=verbose --reporter=junit",
    "test:integration:bun": "bun test tests/integration/ --config tests/integration/vitest.config.ts",
    "test:integration:node": "node --loader tsx tests/integration/ --config tests/integration/vitest.config.ts",
    "test:platform": "vitest run tests/integration/path-handler-platform.test.ts --config tests/integration/vitest.config.ts",
    "test:e2e": "vitest run tests/integration/path-handler-e2e.test.ts --config tests/integration/vitest.config.ts",
    "lint": "bunx biome check . --reporter summary --max-diagnostics 500",
    "lint:fix": "bunx biome check . --write --reporter summary --max-diagnostics 500",
    "lint:unsafe": "bunx biome check . --write --unsafe --reporter summary --max-diagnostics 500",
    "lint:folder": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/biome-folder.ps1",
    "lint:report": "powershell -NoProfile -ExecutionPolicy Bypass -File scripts/biome-report.ps1",
    "lint:backend": "node scripts/biome-backend-chunks.js",
    "lint:backend:fix": "node scripts/biome-backend-chunks.js --write",
    "lint:backend:unsafe": "node scripts/biome-backend-chunks.js --write --unsafe",
    "lint:backend:bat": "scripts/biome-backend-chunks.bat",
    "lint:backend:bash": "bash scripts/biome-backend-chunks.sh",
    "lint:safe": "bun biome check packages/shared packages/frontend packages/cli --write",
    "format": "biome format --write .",
    "check": "biome check .",
    "clean": "bun run --cwd packages/backend clean || npm run clean --workspace @unified-repo-analyzer/backend && bun run --cwd packages/frontend clean || npm run clean --workspace @unified-repo-analyzer/frontend && bun run --cwd packages/cli clean || npm run clean --workspace @unified-repo-analyzer/cli && bun run --cwd packages/shared clean || npm run clean --workspace @unified-repo-analyzer/shared",
    "postinstall": "echo \"Dependencies installed successfully. Run 'bun run build' to build the project.\"",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "deploy:prod": "bun run build:prod && bun run docker:build && bun run docker:up",
    "migrate:config": "bun run scripts/migrate-config.ts",
    "validate:compatibility": "bun run scripts/validate-compatibility.ts",
    "feature:rollout": "bun run scripts/feature-rollout.ts",
    "verify:deployment": "bun run scripts/deployment-verification.ts",
    "bun:cleanup": "bun run scripts/fix-runaway-bun.ts cleanup",
    "bun:monitor": "bun run scripts/fix-runaway-bun.ts monitor",
    "bun:status": "bun run scripts/fix-runaway-bun.ts status"
  },
  "keywords": [
    "repository",
    "analysis",
    "code",
    "summary",
    "llm",
    "ai",
    "monorepo",
    "typescript",
    "nodejs",
    "cli",
    "web"
  ],
  "author": "Unified Repository Analyzer Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/unified-repo-analyzer.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/unified-repo-analyzer/issues"
  },
  "homepage": "https://github.com/your-org/unified-repo-analyzer#readme",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/coverage-v8": "3.2.4",
    "bun-types": "^1.2.21",
    "c8": "^10.1.3",
    "cross-env": "^7.0.3",
    "jest-axe": "^10.0.0",
    "jsdom": "^26.1.0",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  },
  "dependencies": {
    "@biomejs/biome": "^2.2.2",
    "@sentry/bun": "^10.5.0",
    "@sentry/cli": "^2.52.0",
    "biome": "^0.3.3",
    "bun": "^1.2.20",
    "vitest-mock-extended": "^3.1.0",
    "zod": "^3.22.4"
  },
  "trustedDependencies": [
    "@sentry/cli"
  ]
}
