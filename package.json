{
  "name": "unified-repo-analyzer",
  "version": "1.0.0",
  "description": "A comprehensive tool for analyzing code repositories, generating executive summaries and technical breakdowns",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev:backend & npm run dev:frontend",
    "dev:backend": "npm run dev -w packages/backend",
    "dev:frontend": "npm run dev -w packages/frontend",
    "dev:cli": "npm run dev -w packages/cli",
    "build": "npm run build -ws",
    "build:prod": "NODE_ENV=production npm run build -ws",
    "test": "npm run test -ws",
    "lint": "npm run lint -ws",
    "format": "npm run format -ws",
    "clean": "npm run clean -ws",
    "prepare": "npm run build",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "deploy:prod": "npm run build:prod && npm run docker:build && npm run docker:up"
  },
  "keywords": [
    "repository",
    "analysis",
    "code",
    "summary",
    "llm",
    "ai",
    "monorepo",
    "typescript",
    "nodejs",
    "cli",
    "web"
  ],
  "author": "Unified Repository Analyzer Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/unified-repo-analyzer.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/unified-repo-analyzer/issues"
  },
  "homepage": "https://github.com/your-org/unified-repo-analyzer#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.3",
    "globals": "^16.3.0",
    "prettier": "^3.6.2",
    "typescript": "^5.3.3"
  }
}
